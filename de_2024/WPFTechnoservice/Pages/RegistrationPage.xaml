<Page x:Class="WPFTechnoservice.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFTechnoservice.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationPage">

    <Grid>
        <StackPanel>
            <Label Content="Логин"/>
            <TextBox x:Name="LoginTextBox"/>
            
            <Label Content="Пароль"/>
            <TextBox x:Name="PasswordTextBox"/>

            <Label Content="ФИО"/>
            <TextBox x:Name="UserFIOTextBox"/>

            <Button Content="Регистрация" Click="RegistrationButton_Click"/>
            <Button Content="Войти" Margin="0 50 0 0" Click="AuthButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
